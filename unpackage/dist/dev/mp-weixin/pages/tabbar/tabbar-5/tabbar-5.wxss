
@charset "UTF-8";
page {
  background-color: #fff;
}
.header {
  background-color: #ff6364;
  width: 92%;
  height: 30vw;
  padding: 0 4%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.header.status {
  padding-top: 25px;
}
.header .userinfo {
  width: 90%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.header .userinfo .face {
  -webkit-flex-shrink: 0;
  flex-shrink: 0;
  width: 15vw;
  height: 15vw;
}
.header .userinfo .face image {
  width: 100%;
  height: 100%;
  border-radius: 100%;
}
.header .userinfo .info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-flow: wrap;
  flex-flow: wrap;
  padding-left: 15px;
}
.header .userinfo .info .username {
  width: 100%;
  color: #fff;
  font-size: 20px;
}
.header .userinfo .info .integral {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  padding: 0 10px;
  height: 20px;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 10px;
  font-size: 12px;
}
.header .setting {
  -webkit-flex-shrink: 0;
  flex-shrink: 0;
  width: 6vw;
  height: 6vw;
}
.header .setting image {
  width: 100%;
  height: 100%;
}
.hover {
  background-color: #eee;
}
.orders {
  background-color: #ff6364;
  width: 92%;
  height: 11vw;
  padding: 0 4%;
  margin-bottom: calc(11vw + 20px);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
  align-items: flex-start;
  border-radius: 0 0 100% 100%;
}
.orders .box {
  width: 98%;
  padding: 0 1%;
  height: 22vw;
  background-color: #fefefe;
  border-radius: 12px;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.15);
  margin-bottom: 20px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}
.orders .box .label {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-flex-flow: wrap;
  flex-flow: wrap;
  width: 100%;
  height: 16vw;
  color: #666666;
  font-size: 13px;
}
.orders .box .label .icon {
  position: relative;
  width: 7vw;
  height: 7vw;
  margin: 0 1vw;
}
.orders .box .label .icon .badge {
  position: absolute;
  width: 4vw;
  height: 4vw;
  background-color: #ec6d2c;
  top: -1vw;
  right: -1vw;
  border-radius: 100%;
  font-size: 10px;
  color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}
.orders .box .label .icon image {
  width: 7vw;
  height: 7vw;
}
.list {
  width: 100%;
  border-bottom: solid 13px #f1f1f1;
}
.list .li {
  width: 92%;
  height: 50px;
  padding: 0 4%;
  border-bottom: solid 1px #e7e7e7;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.list .li.noborder {
  border-bottom: 0;
}
.list .li .icon {
  -webkit-flex-shrink: 0;
  flex-shrink: 0;
  width: 25px;
  height: 25px;
}
.list .li .icon image {
  width: 25px;
  height: 25px;
}
.list .li .text {
  padding-left: 10px;
  width: 100%;
  color: #666;
}
.list .li .to {
  -webkit-flex-shrink: 0;
  flex-shrink: 0;
  width: 20px;
  height: 20px;
}